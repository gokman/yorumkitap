<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />
    
    <style name="text">
        <item name="android:padding">4dip</item>
        <item name="android:textColor">#000000</item>
        <item name="android:shadowColor">#00ccff</item>  
        <item name="android:shadowRadius">1.5</item>  
        <item name="android:shadowDx">1</item>  
        <item name="android:shadowDy">1</item> 
        <item name="android:typeface">sans</item>
        <item name="android:background">#ffe4e1</item>
        
    </style>
    
    <style name="giris_button">
         <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#e35507</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="add_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#e35507</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="explorePage_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/ownOrange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:height">50dip</item>
        <item name="android:padding">1dip</item>
    </style>
    
        <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-2dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">ExpandableListView Sample</item>
        <item name="android:textColor">#FFF38585</item>
        <item name="android:textSize">18dip</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="follow_in_timeline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ownGray</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
</resources>     
