<?xml version="1.0" encoding="utf-8"?>    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/linearLayoutAltDugmeler"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:background="@color/projetColor"
            android:weightSum="100" >

             <ImageButton
                 android:id="@+id/home_button"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:layout_weight="25"
                 android:padding="10dp"    
                 android:adjustViewBounds="true"
                 android:scaleType="centerInside"
                 android:focusable="true"       
                 android:background="@drawable/home_button"
                 android:src="@drawable/home_button_img" />
           
             <ImageButton
                 android:id="@+id/explore_button"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:adjustViewBounds="true"
                 android:layout_weight="25"
                 android:padding="10dp"
                 android:scaleType="centerInside"
                 android:background="@drawable/explore_button"
                 android:src="@drawable/explore_button_img" />


             <ImageButton
                 android:id="@+id/profile_button"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:adjustViewBounds="true"
                 android:layout_weight="25"
                 android:padding="10dp"
                 android:scaleType="centerInside"
                 android:background="@drawable/profile_button"
                 android:src="@drawable/profile_button_img" />
             

             <ImageButton
                 android:id="@+id/timeline_button"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:adjustViewBounds="true"
                 android:layout_weight="25"
                 android:padding="10dp"
                 android:scaleType="centerInside"
                 android:background="@drawable/timeline_button"
                 android:src="@drawable/timeline_button_img" />
         </LinearLayout>