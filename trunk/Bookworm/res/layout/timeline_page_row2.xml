    <TextView
        android:id="@+id/textFollowship"
        android:paddingLeft="4dip"
        style="@style/follow_in_timeline"
        android:layout_toRightOf="@+id/textFollower"
        android:text="takip ediyor" />

    <TextView
        android:id="@+id/textFollowed"
        android:paddingLeft="4dip"
        style="@style/follow_in_timeline"
        android:layout_toRightOf="@+id/textFollowship"
        android:text="Fatih'i" />

    <TextView
        android:id="@+id/tl_follow_date"
        style="@style/follow_in_timeline"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:text="20 10 2012" />

    <TextView
        android:id="@+id/timeline_follow_book_adderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="book_adder_id" />
    
<View   android:id="@+id/firstDivider"
