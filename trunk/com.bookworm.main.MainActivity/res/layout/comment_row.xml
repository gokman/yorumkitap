<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" 
    android:clickable="false">
 

    <TextView
        android:id="@+id/comment_owner_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Çalıkuşu"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />
 
    <TextView
        android:id="@+id/comment_left"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_owner_left"
        android:textColor="@color/ownOrange"
        android:textSize="10dip"
        android:layout_marginTop="1dip"
        android:text="Bence mükemmel bir kitap herkes okumalı ..." />
 
    <!-- Rightend Duration -->
 
     <View
        android:id="@+id/firstDivider"
        android:layout_height="0.5dp"
        android:layout_width="fill_parent"
        android:background="@color/ownOrange" 
        android:layout_below="@id/comment_left"/>
        
</RelativeLayout>